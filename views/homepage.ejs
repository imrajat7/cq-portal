<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
			margin: 0;
            padding: 0;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
		}
		nav {
            width:100%;
            height: 8vh;
			background-color: #222D3C;
            color: #fff;
		}
		nav p {
			margin: 0;
			font-size: 30px;
			padding: 10px;
			float: left;
		}
		nav span {
            padding: .2em .6em .3em;
            font-size: 75%;
            font-weight: 500;
            color: #fff;
            margin-top: 2.5vh;
            margin-left: 1vh;
            font-size: 14px;
            vertical-align: center;
            border-radius: .25em;
            float: right;
		}
		nav img {
			float: right;
			border-radius: 50%;
			padding: 15px;
        }
		#menu {
			background-color:#000;
			width: 50px;
			transition-property: width;
			transition-duration: 0.7s;
            box-sizing: border-box;
            float: left;
            height:92vh;
		}
		.fa {
			color: #fff;
			font-size: 25px;
			width: 30px;
			margin: 6px 15px;
			margin-left: 11px;
			box-sizing: border-box;
		}
		#menu span {
			display: none;
		}
		.menu-item {
			cursor: pointer;
			opacity: 0.8;
			color: #fff;
			font-family: sans-serif;
			font-size: 14px;
		}
		.menu-item:hover {
			border-left: 2px solid red;
			opacity: 1;
			background-color: #4d5866;
		}
        #user_icon{
            height:100%;
            width: 10%;
        }
        #body_internal_div{
            float: left;
            margin-left:12%;
            margin-top: 2%;
            transition-duration: 700ms;
            height: 550px;
            width: 70%;
            border: 1px solid #eeeeee;
            box-shadow: 0px 1px 10px 0px rgb(201, 201, 201);
        }
        #body_internal_profile_div{
            width: 100%;
            height:30%;
            line-height: 30%;
        }
        #user_icon{
            padding: 25px;
            font-size: 100px;
        }
        #fields_outer_div{
            height:70%;
            width: 100%;
        }
        .outer_div{
            height:22%;
            margin-left:2%;
            margin-top: 3%;
            width:47%;
            text-align: center;
            float: left;
            border: 1px solid rgb(211, 211, 211);
            box-shadow: 0px 2px 10px 0px rgb(201, 201, 201);
        }
        .div_inner_1{
            background:#e9e9e9;
            border-bottom: 1px solid rgb(211, 211, 211);
            height:55%;
            font-size: 15px;
            line-height: 3em;
            text-align: left;
            padding-left: 3%;
        }
        .div_inner_2{
            height:45%;
            padding-left: 3%;
            line-height: 2em;
            text-align: left;
        }
        .active{
            background: #51a1e2 !important;
        }
        #profile_button{
            cursor: pointer;
        }
    </style>
</head>
<body>
    <% include partials/menu.html %>
    <div id="body_internal_div">
        <div id="body_internal_profile_div"><span><i class="far fa-user" id="user_icon"></i></span></div>
        <div id="fields_outer_div">
            <div class="outer_div">
                <div class="div_inner_1"><span class="spans">Email</span></div>
                <div class="div_inner_2"><%=data[0].email%></div>
            </div>
            <div class="outer_div">
                <div class="div_inner_1">Gender</div>
                <div class="div_inner_2"><%=data[0].gender%></div>
            </div>
            <div class="outer_div">
                <div class="div_inner_1">Name</div>
                <div class="div_inner_2"><%=data[0].name%></div>
            </div>
            <div class="outer_div">
                <div class="div_inner_1">City</div>
                <div class="div_inner_2"><%=data[0].city%></div>
            </div>
            <div class="outer_div">
                <div class="div_inner_1">D.O.B</div>
                <div class="div_inner_2"><%=data[0].dob%></div>
            </div>
            <div class="outer_div">
                <div class="div_inner_1">Phone</div>
                <div class="div_inner_2"><%=data[0].phoneno%></div>
            </div>
        </div>
    </div>
</body>
<script>
    var menu = document.getElementById("menu");
    var sideBtn = document.getElementById("sideBtn");
    var body_internal_div = document.getElementById("body_internal_div");
    var span = menu.getElementsByTagName("span");
    var div = menu.getElementsByTagName('div');
    for(var i=0;i<div.length;i++){
        div[i].classList.remove("active");
    }
    
    div[1].classList.add("active");

    var profile_button = document.getElementById("profile_button");
    
    //Buttons on Left Navigation Drawer
    var profile_button_left = document.getElementById('profile_button_left');
    var add_user_button_left = document.getElementById('add_user_button_left');
    var user_list_button = document.getElementById('user_list_button');
    var community_list_button = document.getElementById('community_list_button');
    var switch_user_button = document.getElementById('switch_user_button');
    var tag_panel_button = document.getElementById('tag_panel_button');
    var change_password_button = document.getElementById('change_password_button');
    var logout_button = document.getElementById('logout_button');


	sideBtn.addEventListener("click", function () {
		if(menu.style.width == '300px') {
            menu.style.width = '50px';
            body_internal_div.style.marginLeft = '12%';
            body_internal_div.style.marginTop = '2%';
			for(var i = 0;i<span.length;i++) {
				span[i].style.display = 'none';
			}
		} else {
            menu.style.width = '300px';
            body_internal_div.style.marginLeft = '4%';
            body_internal_div.style.marginTop = '1.5%';
			setTimeout(function () {
				for(var i = 0;i<span.length;i++) {
					span[i].style.display = 'inline';
				}
			}, 210);
		}
    })

    profile_button.addEventListener("click",function(event){
        window.location = '/profile'
    })

    profile_button_left.addEventListener("click",function(event){
        window.location = '/<%= data[0].role%>/profile'
    });
    
    change_password_button.addEventListener('click',function(event){
        window.location = '/changePassword';
    });

    add_user_button_left.addEventListener('click',function(event){
        window.location = '/<%= data[0].role%>/adduser';
    });

    tag_panel_button.addEventListener("click",function(event){
        window.location = '/tag';
    });

    user_list_button.addEventListener("click",function(event){
        window.location = '/<%=data[0].role%>/userlist';
    });

    logout_button.addEventListener("click",function(event){
        $.confirm({
            title: 'Confirm Logout',
            boxWidth: '20%',
            theme: 'supervan',
            backgroundDismissAnimation: 'random',
            useBootstrap: false,
            content: 'Do you really want logout?',
            buttons: {
                Yes: function () {
                // $.alert('Yes');
                var data = new Object();
                data.logout = 1;
                var request = new XMLHttpRequest();
                request.open("GET",'/');
                request.setRequestHeader("Content-Type","application/json");
                request.send(JSON.stringify(data));
                },
                No: function () {
                // $.alert('No');
                }
            }
        });
    });
</script>
</html>