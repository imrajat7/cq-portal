        #user_icon{
            height:100%;
            width: 10%;
        }
        .active{
            background: #51a1e2 !important;
        }
        #profile_button{
            cursor: pointer;
        }
        #body_internal_div{
            background: #fff;
            position: absolute;
            width: 75%;
            left: 12.5%;
            top: 10%;
            margin-bottom: 50px;
            border: 1px solid #eeeeee;
            box-shadow: 0px 1px 10px 0px rgb(201, 201, 201);
            overflow: auto;
            padding: 15px;
        }
        #profile_div{
            padding:0;
            margin:0;
            margin-bottom: 15px;
            width: 150px;
            border: 1px solid #bbbbbb;
            box-shadow: 0px 1px 10px 0px rgb(210, 210, 210);
            border-radius: 3px;
        }
        #profile_photo_div{
            width: 20%;
        }
        #profile_pic{
            height: 150px;
            width:150px;
        }
        #basic_info_div{
            width:100%;
            padding: 8px;
            border: 1px solid #bbbbbb;
            border-radius: 4px;
        }
        #basic_info_heading{
            padding: 0;
            margin: 0;
            padding: 8px 15px;
            color: #333;
            background-color: #e6e6e6;
            border: 1px solid #bbbbbb;
            border-color: rgb(170, 170, 170);
            border-radius: 3px;
        }
        label{
            margin-top: 10px;
            display: inline-block;
            max-width: 100%;
            margin-bottom: 5px;
            font-weight: 700;
        }
        #email_input{
            cursor: not-allowed;
        }
        input,select{
            display: block;
            margin-bottom: 5px;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
