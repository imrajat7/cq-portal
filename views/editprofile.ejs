</head>
<body>
    <% include partials/menu.html %>
    <div id="body_internal_div">
        <div id="profile_photo_div">
            <div id="profile_div">
                <img src='/images/default.png' id='profile_pic'>
            </div>
        </div>
        <div id='basic_info_div'>
        <div id="basic_info_heading">Basic Info</div>
        <div id="Basic_info_body">
            <label id="email_label">Email:</label>
            <input type="text" id="email_input" value="<%=data[0].email%>">
            <label id="name_label">Name:</label>
            <input type="text" value="<%=data[0].name%>" id="name_input">
            <label id="dob_label">DOB:</label>
            <input type="text" id="dob_input" value="<%=data[0].dob%>">
            <label id="gender_label">Gender: </label>
            <select id="select_gender" name="role">
                <option selected="true" disabled="disabled">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="transgender">Transgender</option>
            </select>
            </select>
            <label id="phone_label">Phone: </label>
            <input type="text" id="phoneno_input" value="<%=data[0].phoneno%>">
            <label id="contact_label">City: </label>
            <input type="text" id="city_input" value="<%=data[0].city%>">
            <label id="interest_label">Interests: </label>
            <input type="text" id="interest_input">
            <label id="journey_label">Tell us a bit more about your journey: </label>
            <input type="text" id="journey_input">
            <label id="expectation_label">What are your expectations from the communities? </label>
            <input type="text" id="expectation_input">
        </div>
        <div id='buttons_div'>
            <form>
            <button id="change_password_buttonn" type="buttons" class="buttons">Change Password</button>
            <button id="update_button" type="button" class="buttons">Update</button>
            <button id="cancel_button" type="button" class="buttons">Cancel</button>
            </form>
        </div>
        </div>
    </div>
</body>
<script>
    var menu = document.getElementById("menu");
    var sideBtn = document.getElementById("sideBtn");
    var body_internal_div = document.getElementById("body_internal_div");
    var span = menu.getElementsByTagName("span");
    var div = menu.getElementsByTagName('div');
    for(var i=0;i<div.length;i++){
        div[i].classList.remove("active");
    }
    
    div[1].classList.add("active");

    var profile_button = document.getElementById("profile_button");
    
    //Buttons on Left Navigation Drawer
    var profile_button_left = document.getElementById('profile_button_left');
    var add_user_button_left = document.getElementById('add_user_button_left');
    var user_list_button = document.getElementById('user_list_button');
    var community_list_button = document.getElementById('community_list_button');
    var switch_user_button = document.getElementById('switch_user_button');
    var tag_panel_button = document.getElementById('tag_panel_button');
    var change_password_button = document.getElementById('change_password_button');
    var logout_button = document.getElementById('logout_button');

    var change_password_buttonn = document.getElementById('change_password_buttonn');
    var cancel_button = document.getElementById('cancel_button');
    var update_button = document.getElementById('update_button');

    $(document).ready(function(){
      $("#sideBtn").click(function(){
         if($("#menu").width() == 50){
            $("#menu").animate({width: '250px'},300);
            $("#body_internal_div").animate({left:'20%'},300);
         } else{
            $("#menu").animate({width: '50px'},300);
            $("#body_internal_div").animate({left:'12.5%'},300);
         }
      });
   });
	

    profile_button.addEventListener("click",function(event){
        window.location = '/profile'
    })

    change_password_button.addEventListener('click',function(event){
        window.location = '/changePassword';
    });

    add_user_button_left.addEventListener('click',function(event){
        window.location = '/<%= data[0].role%>/adduser';
    });

    profile_button_left.addEventListener("click",function(event){
        window.location = '/<%= data[0].role%>/profile';
    });

    tag_panel_button.addEventListener("click",function(event){
        window.location = '/tag';
    });
    
    user_list_button.addEventListener("click",function(event){
        window.location = '/<%=data[0].role%>/userlist';
    });

    logout_button.addEventListener("click",function(event){
        $.confirm({
            title: 'Confirm Logout',
            boxWidth: '20%',
            theme: 'supervan',
            // backgroundDismissAnimation: 'random',
            useBootstrap: false,
            content: 'Do you really want logout?',
            buttons: {
                Yes: function () {
                    window.location = '/logout';
                },
                No: function () {
                // $.alert('No');
                }
            }
        });
    });

    change_password_buttonn.addEventListener('click',function(){
        window.location = '/changePassword'
    });

    cancel_button.addEventListener('click',function(){
        window.location = '/profile';
    });

    update_button.addEventListener('click',function(){
        console.log('I am clicked');
        var updetail = new Object();
        updetail.email = '<%= data[0].email%>';
        updetail._id = '<%= data[0]._id%>';
        updetail.name = document.getElementById('name_input').value;
        updetail.dob = document.getElementById('dob_input').value;
        updetail.gender = document.getElementById('select_gender').value;
        updetail.phoneno = document.getElementById('phoneno_input').value;
        updetail.city = document.getElementById('city_input').value;
        updetail.interest = document.getElementById('interest_input').value;
        updetail.journey = document.getElementById('journey_input').value;
        updetail.expectation = document.getElementById('expectation_input').value;
        var request = new XMLHttpRequest();
        request.open('PUT','/updateUserDetails');
        request.setRequestHeader('Content-Type','application/json');
        request.send(JSON.stringify(updetail));
        request.onload = function(){
            var dataReturned = request.responseText;
            if(dataReturned==""||dataReturned==null){
            alert('Error in Updating Details!!!');
            window.location = '/profile';
            }
            else{
                console.log(dataReturned);
                alert('Data Updated correctly');
                window.location = '/profile';
            }
        }
    });

</script>
</html>