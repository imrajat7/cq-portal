<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Commuinity Panel</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="/trumbowyg.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="/trumbowyg.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        *{
            box-sizing: border-box;
        }
        body {
			margin: 0;
            padding: 0;
            width: 100%;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
		}
		nav {
            position:fixed;
            width:100%;
            height: 60px;
			background-color: #222D3C;
            color: #fff;
            z-index: 9999999;
		}
		nav p {
            margin: 0;
            float: left;
            height: 50px;
            padding: 15px 15px;
            font-size: 20px;
            line-height: 20px;
            font-weight: bold;
		}
		nav span {
            float: right;
            padding: .2em .6em .3em;
            margin-top: 22px;
            margin-left: 5px;
            font-size: 75%;
            line-height: 1;
            font-weight: 700;
            color: #fff;
            font-size: 14px;
            vertical-align: center;
            border-radius: .25em;
            vertical-align: baseline;
		}
		nav img {
			float: right;
			border-radius: 50%;
			padding: 15px;
        }
		#menu {
            position:fixed;
            padding-top: 60px;
            background-color: #000;
            width: 50px;
            height:100vh;
            color:white;
            box-sizing: border-box;
            overflow:hidden;
            z-index: 99;
		}
		.fa {
            color: #fff;
			font-size: 25px;
			width: 30px;
			margin: 6px 15px;
			margin-left: 11px;
			box-sizing: border-box;
		}
		.menu-item {
            width: 250px;
			cursor: pointer;
			opacity: 0.8;
			color: #fff;
			font-family: sans-serif;
			font-size: 14px;
            padding-top: 10px;
		}
		.menu-item:hover {
			border-left: 2px solid red;
			opacity: 1;
			background-color: #4d5866;
		}
        .active{
            background: #51a1e2 !important;
        }
        #user_icon{
            height:100%;
            width: 10%;
        }
        #community_header_div{
            position: absolute;
            top:60px;
            width: 100%;
            padding-left: 100px;
            background-color: #3ea7c1;
            line-height: 50px;
        }

        #body_internal_div{
            padding:0;
            margin:0;
            position: absolute;
            left: 25%;
            top: 20%;
            width: 50%;
            border: 1px solid #eeeeee;
            box-shadow: 0px 1px 10px 0px rgb(201, 201, 201);
            margin-bottom: 50px;
        }
        .btn{
            background: transparent;
            border: 1px solid #fff;
            width: 50px;
            color: #fff;
            cursor: pointer;
            margin-left: 10px;
            margin-top: 2px;
        }
        #community_header_div button i {
            padding: 0;
            margin: 5px;
            display: block;
        }
        .content {
            width: 100%;
            margin: 0 auto;
            margin-top: 1%;
            margin-bottom: 2%;
        }
        h2 {
            margin: 0;
        }
        #community_name_input {
            width: 100%;
            border-radius: 3px;
            padding: 8px; 
            margin-bottom: 2%;
        }
        #description_text_area {
            margin-top: 2%;
            width: 100%;
            border-radius: 2px;
            resize: none;
        }
        .radio {
            display: inline;
            margin-bottom: 10px;
        }
        #upload_button {
            margin-top: 1%;
            margin-left: 2%;
            background-color: #fab448;
            height: 30px;
            border: none;
            color: #fff;
        }
        #create_community_button {
            margin-top: 4%;
            background-color: #3598d9;
            height: 30px;
            width: 100%;
            text-align: center;
            color: #fff;
            border: none;
        }
    </style>
</head>
<body>
    <% include partials/menu.html %>
    <div id="community_header_div">
        <button class="btn"><i class="fa fa-group"></i></button>
        <button class="btn"><i class="fa fa-search"></i></button>
    </div>
    <div id="body_internal_div">
        <div class="content">
            <h2>Create Community</h2>
            <br>
            <input type="text" id="community_name_input" placeholder="Name">
            <br>
            <label>Description</label>
            <br>
            <textarea id="description_text_area"></textarea>
            <br>
            <label class="radio">Rule: </lebel>
            <input type="radio" class="radio" name="role" id="direct">
            <label class="radio">Direct: </label>
            <input type="radio" class="radio" name="role" id="permission">
            <label class="radio">Permisson</label>
            <br>
            <div id="uploadbutton">
                    <form method="POST" action="/upload" enctype="multipart/form-data">
                        <div class="text-center">
                            <%= typeof msg != 'undefined' ? msg : '' %>
                        </div>
                        <div class="form-group upload-area">
                            <label for="exampleFormControlFile1">Click Here To upload Files</label>
                            <input type="file" name="files" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="buttons" id="upload_button">Upload</button>
                        </div>
                    </form>
                </div>
            <br>
            <button id="create_community_button">Create Community</button>
        </div>
    </div>
</body>
<script>
    var menu = document.getElementById("menu");
    var sideBtn = document.getElementById("sideBtn");
    var body_internal_div = document.getElementById("outer-body-div1");
    var community_header_div = document.getElementById("community_header_div");
    var span = menu.getElementsByTagName("span");
    var div = menu.getElementsByTagName('div');
    for(var i=0;i<div.length;i++){
        div[i].classList.remove("active");
    }
    var create=document.getElementById("createCommunity");
    div[2].classList.add("active");

    var create_community_button = document.getElementById('create_community_button');

    create_community_button.addEventListener('click',function(){
        var date = new Date();
        var communityname = document.getElementById("community_name_input").value;
        var descriptiontextarea = document.getElementById("description_text_area").value;
        var newcommunity = new Object();
        newcommunity.communityname = communityname;
        newcommunity.descriptiontextarea = descriptiontextarea;
        newcommunity.createdate = date.getDate() + '/' + date.getMonth() + '/' + date.getFullYear();
        if(document.getElementById('direct').checked) {
            newcommunity.membershiprule = "Direct";
        }else if(document.getElementById('permission').checked) {
            newcommunity.membershiprule = "Permission";
        }
        var request = new XMLHttpRequest();
        request.open('POST','/community/AddCommunity');
        request.setRequestHeader('Content-Type','application/json');
        request.send(JSON.stringify(newcommunity));
        request.onload = function(){
            var dataReturned = request.responseText;
            if(dataReturned==""||dataReturned==null){
            alert('Error in Adding Details!!!');
            window.location = '/community/AddCommunity';
            }
            else{
                console.log(dataReturned);
                alert('Community added correctly');
                window.location = '/community/AddCommunity';
            }
        }
    });


    
    $(document).ready(function(){
      $("#sideBtn").click(function(){
         if($("#menu").width() == 50){
            $("#menu").animate({width: '250px'},300);
            $("#body_internal_div").animate({left:'35%'},300);
            $("#community_header_div").animate({'padding-left':'250px'},300);
         } else{
            $("#menu").animate({width: '50px'},300);
            $("#body_internal_div").animate({left:'25%'},300);
            $("#community_header_div").animate({'padding-left':'100px'},300);
         }
      });
   });
    $(document).ready(function() {
        $.trumbowyg.svgPath = "/trumbowyg.svg"
        $("#description_text_area").trumbowyg();
    });
    </script>
</html>