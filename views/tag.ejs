<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>editProfile</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
			margin: 0;
            padding: 0;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
		}
		nav {
            width:100%;
            height: 8vh;
			background-color: #222D3C;
            color: #fff;
		}
		nav p {
			margin: 0;
			font-size: 30px;
			padding: 10px;
			float: left;
		}
		nav span {
            padding: .2em .6em .3em;
            font-size: 75%;
            font-weight: 500;
            color: #fff;
            margin-top: 2.5vh;
            margin-left: 1vh;
            font-size: 14px;
            vertical-align: center;
            border-radius: .25em;
            float: right;
		}
		nav img {
			float: right;
			border-radius: 50%;
			padding: 15px;
        }
		#menu {
			background-color:#000;
			width: 50px;
			transition-property: width;
			transition-duration: 0.7s;
            box-sizing: border-box;
            float: left;
            height:92vh;
		}
		.fa {
			color: #fff;
			font-size: 25px;
			width: 30px;
			margin: 6px 15px;
			margin-left: 11px;
			box-sizing: border-box;
		}
		#menu span {
			display: none;
		}
		.menu-item {
			cursor: pointer;
			opacity: 0.8;
			color: #fff;
			font-family: sans-serif;
			font-size: 14px;
		}
		.menu-item:hover {
			border-left: 2px solid red;
			opacity: 1;
			background-color: #4d5866;
		}
        #user_icon{
            height:100%;
            width: 10%;
        }
        .active{
            background: #51a1e2 !important;
        }
        #profile_button{
            cursor: pointer;
        }
        #body_internal_div{
            background: #fff;
            box-sizing: border-box;
            width: 35%;
            padding-bottom: 1.5%;
            box-shadow: 0 0 10px rgba(0,0,0,0.6);
            margin-left: 32.5%;
            margin-top: 100px;
            box-sizing: border-box;
            padding-left:1%;
            padding-right: 1%;
        }
        #create_tag_text{
            padding-top:25px;
            color: #707070;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }
        #input_div{
            margin-top:4%;
        }
        input{
            width: 100%;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        h2{
            margin:0;
            padding:0;
        }
        #button_div{
            display: inline-block;
            width: 100%;
            margin-top: 4%;
        }
        #submit_button{
            color: #fff;
            width: inherit;
            background-color: #337ab7;
            border-color: #2e6da4;
            border: 1px solid;
            padding: 6px 12px;
            font-size: 14px;
            font-weight: 400;
            text-align: center;
            vertical-align: middle;
            line-height: 1.42857143;
        }
        #submit_button:hover{
            color: #fff;
            background-color: #2e6da4;
        }
        #tags_list_div{
            margin-top: 20px;
            width: 100px;
            height: 30px;
            text-align: center;
            margin-left:50%;
            transform: translateX(-50%);
        }
        #tags_list_button{
            color: #fff;
            background-color: #d58512;
            border-color: #ec971f;
            border: 1px;
            display: inline-block;
            padding: 6px 12px;
            margin-bottom: 0;
            font-size: 14px;
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
        }
        #tags_list_button:hover{
            background: #ec971f;
        }
    </style>
</head>
<body>
    <% include partials/menu.html %>
    <div id="body_internal_div">
        <div id='create_tag_text'>
            <h2>Create Tag</h2>
        </div>
        <div id="input_div">
            <input type="text" placeholder="Tag Name">
        </div>
        <div id="button_div">
            <button id="submit_button">Submit</button>
        </div>
    </div>
    <div id="tags_list_div">
        <button id="tags_list_button">Tags List</button>
    </div>
</body>
<script>
    var menu = document.getElementById("menu");
    var sideBtn = document.getElementById("sideBtn");
    var body_internal_div = document.getElementById("body_internal_div");
    var span = menu.getElementsByTagName("span");
    var div = menu.getElementsByTagName('div');
    for(var i=0;i<div.length;i++){
        div[i].classList.remove("active");
    }
    
    div[6].classList.add("active");

    var profile_button = document.getElementById("profile_button");
    
    //Buttons on Left Navigation Drawer
    var profile_button_left = document.getElementById('profile_button_left');
    var add_user_button_left = document.getElementById('add_user_button_left');
    var user_list_button = document.getElementById('user_list_button');
    var community_list_button = document.getElementById('community_list_button');
    var switch_user_button = document.getElementById('switch_user_button');
    var tag_panel_button = document.getElementById('tag_panel_button');
    var change_password_button = document.getElementById('change_password_button');
    var logout_button = document.getElementById('logout_button');
    

	sideBtn.addEventListener("click", function () {
		if(menu.style.width == '300px') {
            menu.style.width = '50px';
            // body_internal_div.style.marginLeft = '12%';
            // body_internal_div.style.marginTop = '2%';
			for(var i = 0;i<span.length;i++) {
				span[i].style.display = 'none';
			}
		} else {
            menu.style.width = '300px';
            // body_internal_div.style.marginLeft = '4%';
            // body_internal_div.style.marginTop = '1.5%';
			setTimeout(function () {
				for(var i = 0;i<span.length;i++) {
					span[i].style.display = 'inline';
				}
			}, 210);
		}
    })

    profile_button.addEventListener("click",function(event){
        window.location = '/profile'
    })

    change_password_button.addEventListener('click',function(event){
        window.location = '/changePassword';
    });

    add_user_button_left.addEventListener('click',function(event){
        window.location = '/<%= data[0].role%>/adduser';
    });

    profile_button_left.addEventListener("click",function(event){
        window.location = '/<%= data[0].role%>/profile';
    });

    tag_panel_button.addEventListener("click",function(event){
        window.location = '/tag';
    });

    user_list_button.addEventListener("click",function(event){
        window.location = '/<%=data[0].role%>/userlist';
    });

</script>
</html>